@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" data-layout="vertical" data-topbar="light" data-sidebar="dark" data-sidebar-size="lg" data-sidebar-image="none">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Smarthr - Bootstrap Admin Template">
    <meta name="keywords" content="admin, estimates, bootstrap, business, corporate, creative, management, minimal, modern, accounts, invoice, html5, responsive, CRM, Projects">
    <meta name="author" content="Dreamguys - Bootstrap Admin Template">
    <title>Login - Porto</title>

    <link rel="shortcut icon" type="image/x-icon" href="/TemplateFiles/img/favicon.png">

    <link rel="stylesheet" href="/TemplateFiles/css/bootstrap.min.css">

    <link rel="stylesheet" href="/TemplateFiles/plugins/fontawesome/css/fontawesome.min.css">
    <link rel="stylesheet" href="/TemplateFiles/plugins/fontawesome/css/all.min.css">

    <link rel="stylesheet" href="/TemplateFiles/css/line-awesome.min.css">
    <link rel="stylesheet" href="/TemplateFiles/css/material.css">

    <link rel="stylesheet" href="/TemplateFiles/css/line-awesome.min.css">

    <link rel="stylesheet" href="/TemplateFiles/css/style.css">
</head>
<body class="account-page" ng-app="PortoUIAdmin" ng-controller="LoginCtrl">

    <div class="main-wrapper">
        <div class="account-content">
            <div class="container">

                <div class="account-logo">
                    <a href="admin-dashboard.html"><img src="/TemplateFiles/img/logo2.png" alt="Dreamguy's Technologies"></a>
                </div>

                <div class="account-box">
                    <div class="account-wrapper">
                        <h3 class="account-title">Login</h3>
                        <p class="account-subtitle">Access to our dashboard</p>

                        <form name="formLogin">
                            <div class="input-block mb-4">
                                <label class="col-form-label">User Name</label>
                                <input class="form-control" type="text" ng-model="Username">
                            </div>
                            <div class="input-block mb-4">
                                <div class="row align-items-center">
                                    <div class="col">
                                        <label class="col-form-label">Password</label>
                                    </div>
                                    <div class="col-auto">
                                        <a class="text-muted" href="forgot-password.html">
                                            Forgot password?
                                        </a>
                                    </div>
                                </div>
                                <div class="position-relative">
                                    <input class="form-control" type="password" id="password" ng-model="Password">
                                    <span class="fa-solid fa-eye-slash" id="toggle-password"></span>
                                </div>
                            </div>
                            <div class="input-block mb-4">
                                <div id="html_element"></div>
                            </div>
                            <div class="input-block mb-4 text-center">
                                <button class="btn btn-primary account-btn" ng-click="Login()">Login</button>
                            </div>
                            <div class="account-footer">
                                <p>Don't have an account yet? <a href="register.html">Register</a></p>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>


    <script src="/TemplateFiles/js/jquery-3.7.0.min.js"></script>
    <script src="/TemplateFiles/js/bootstrap.bundle.min.js"></script>
    <script src="/TemplateFiles/js/app.js"></script>
    <script src="https://www.google.com/recaptcha/api.js?onload=onloadCallback&render=explicit" async defer></script>
    <script type="text/javascript">
        var IsValidReCaptcha = false;
        var verifyCallback = function (response) {
            IsValidReCaptcha = true;
        };

        var onloadCallback = function () {
            grecaptcha.render('html_element', {
                'sitekey': '6LeMYcgnAAAAAD0Lc4AQ4mcNo2I9VSULtiHGatTF',
                'callback': verifyCallback,
                'theme': 'light'
            });
        };
    </script>
    <script src="/plugins/angularjs/angular.1.8.2.min.js"></script>
    <script src="/content/angularjs/login/loginctrl.js"></script>
</body>
</html>