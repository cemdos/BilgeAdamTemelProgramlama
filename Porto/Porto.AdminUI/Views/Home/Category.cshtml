@{
    ViewData["Title"] = "Category Actions";
}

<div class="card" ng-controller="CategoryCtrl">
    <div class="card-header">
        <h4 class="card-title mb-0">Category List</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12 mb-4">
                <button ng-click="OpenNewCategoryModal()" class="btn btn-sm btn-success float-end">
                    <i class="fa fa-plus"></i>
                    New Category
                </button>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-striped mb-0">
                        <thead>
                            <tr>
                                <th>Category Name</th>
                                <th>Description</th>
                                <th>ParentID</th>
                                <th style="width: 80px"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="category in CategoryList">
                                <td>{{category.Name}}</td>
                                <td>{{category.Description}}</td>
                                <td>{{category.ParentID}}</td>
                                <td>
                                    <button ng-click="OpenEditCategoryModal(category)" class="btn btn-sm btn-warning">Düzenle</button>
                                    <button ng-click="RemoveCategory(category.ID)" class="btn btn-sm btn-danger">Sil</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>

@section AngularScripts {
    <script src="/content/angularjs/category/categoryctrl.js"></script>
}